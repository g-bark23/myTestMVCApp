@model myTestApp.Models.User
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "This is my test page";
}


    <table class="table">
        <tr>
            <td>
            </td>
            <td>
                <h3>Login - Time Card Manager</h3>
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create New User</button>
            </td>
        </tr>
    </table>
    <form asp-controller="Users" asp-action="LogInUser" method="post"> 
        <fieldset>
            <table class="table">
                <tr>
                    <td>
                        <label asp-for="username">Username: </label>
                    </td>
                    <td>
                        <input asp-for="username" type="text" id="username" name="username">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="password">Password: </label>
                    </td>
                    <td>
                        <input asp-for="password" type="password" id="password" name="password">
                    </td>
                </tr>   
                <tr>
                    <td colspan="2">
                        <button type="submit" class="btn btn-primary" id="submit" name="submit">Submit</button>
                    </td>   
                </tr>
            </table>    
        </fieldset>
    </form>

<!-- Create User Modal -->
<div class="modal fade" id="myModal" role="dialog">
<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">Create New User</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form asp-controller="Users" asp-action="Create" method="post"> 
        <fieldset>
            <table class="table">
                <tr>
                    <td>
                        <label asp-for="name">Full Name: </label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.name)
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="username">Username: </label>
                    </td>
                    <td>
                        <input type="username" id="username" asp-for="username" name="username"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="password">Password: </label>
                    </td>
                    <td>
                        <input type="password" id="password" asp-for="password" name="password"/>
                    </td>
                </tr>   
                <tr>
                    <td colspan="2">
                        <input type="submit" id="submit" value="Create" class="btn btn-default" />
                    </td>   
                </tr>
            </table>    
        </fieldset>
    </form>
    </div>
  </div>
</div>
}